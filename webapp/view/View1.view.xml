<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified"
	controllerName="Image2Text.controller.View1" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox alignItems="Center">
						<u:FileUploader id="fileUploader" change="onFileUpload" buttonText="Upload"/>
						<HBox alignContent="SpaceBetween">
							<Image id="uploadedImage" width="630px" height="420px"/>
							<TextArea id="extractedText" width="630px" height="420px" visible="false"/>
						</HBox>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>